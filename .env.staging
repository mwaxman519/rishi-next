# Rishi Platform - Staging Environment Configuration
# This file is used for staging/autoscale deployments and mobile builds

# Environment Markers
NODE_ENV=production
NEXT_PUBLIC_APP_ENV=staging
NEXT_PUBLIC_ENVIRONMENT=staging

# Database Configuration - STAGING
# Replace with your actual staging Neon database URL
DATABASE_URL=postgresql://neondb_owner:password@ep-staging-hostname.neon.tech/rishiapp_staging?sslmode=require

# API Configuration
NEXT_PUBLIC_API_URL=https://rishi-staging.replit.app
NEXT_PUBLIC_BASE_URL=https://rishi-staging.replit.app

# Authentication Configuration
NEXTAUTH_URL=https://rishi-staging.replit.app
NEXTAUTH_SECRET=staging-auth-secret-key-replace-with-secure-value

# Google Maps Configuration (if needed)
# GOOGLE_MAPS_API_KEY=your-google-maps-api-key
# NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# External Service Configuration
# SENDGRID_API_KEY=your-sendgrid-api-key
# STRIPE_SECRET_KEY=your-stripe-test-key
# STRIPE_PUBLISHABLE_KEY=your-stripe-test-publishable-key

# Mobile App Configuration
NEXT_PUBLIC_ENABLE_OFFLINE=true
NEXT_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_NATIVE_FEATURES=true

# Staging Feature Flags
NEXT_PUBLIC_DEBUG_MODE=true
NEXT_PUBLIC_STAGING_BANNER=true
NEXT_PUBLIC_ANALYTICS_ENABLED=false
NEXT_PUBLIC_ERROR_REPORTING_ENABLED=true

# Replit Autoscale Configuration
REPLIT_ENV=staging
PORT=5000