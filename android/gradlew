#!/usr/bin/env sh

# VoltBuilder-compatible Gradle wrapper script
# Avoids using problematic text patterns that get corrupted

APP_NAME="Gradle"
APP_BASE_NAME=`basename "$0"`

# Add default JVM options
DEFAULT_JVM_OPTS='"-Xmx64m" "-Xms64m"'

# Find java
if [ -n "$JAVA_HOME" ] ; then
    if [ -x "$JAVA_HOME/jre/sh/java" ] ; then
        JAVACMD="$JAVA_HOME/jre/sh/java"
    else
        JAVACMD="$JAVA_HOME/bin/java"
    fi
    if [ ! -x "$JAVACMD" ] ; then
        die "ERROR: JAVA_HOME is set to an invalid directory: $JAVA_HOME"
    fi
else
    JAVACMD="java"
    which java >/dev/null 2>&1 || die "ERROR: JAVA_HOME is not set and no 'java' command could be found in your PATH."
fi

# VoltBuilder will replace this placeholder with the actual wrapper jar path
WRAPPER_JAR="\$APP_HOME/gradle/wrapper/gradle-wrapper.jar"

# Build the command avoiding problematic words
# Use 'cp' parameter for jar path specification
exec "$JAVACMD" $DEFAULT_JVM_OPTS -cp "$WRAPPER_JAR" org.gradle.wrapper.GradleWrapperMain "$@"
