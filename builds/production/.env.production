# Production Mobile Build Environment
NODE_ENV=production
NEXT_PUBLIC_APP_ENV=production
NEXT_PUBLIC_BUILD_TYPE=mobile-static

# Production Backend (Vercel Serverless)
NEXT_PUBLIC_API_BASE_URL=https://rishi-platform.vercel.app
NEXT_PUBLIC_BACKEND_TYPE=serverless

# Mobile App Configuration
NEXT_PUBLIC_APP_ID=com.rishiplatform.app
NEXT_PUBLIC_APP_NAME=Rishi Platform
NEXT_PUBLIC_VERSION=1.0.0

# Production Features
NEXT_PUBLIC_ENABLE_OFFLINE=true
NEXT_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_LOCAL_STORAGE=true

# Analytics (Production)
NEXT_PUBLIC_ANALYTICS_ENABLED=true