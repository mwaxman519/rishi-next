# Application Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_ENV=development
NEXT_PUBLIC_APP_NAME="Rishi Platform"
NEXT_PUBLIC_APP_VERSION="1.0.0"

# Database Configuration
DATABASE_URL="postgresql://username:password@host:port/database?sslmode=require"
PGUSER="database_username"
PGPASSWORD="database_password"
PGHOST="database_host"
PGPORT=5432
PGDATABASE="database_name"

# Authentication Configuration
JWT_SECRET="your-secure-jwt-secret-here"
JWT_REFRESH_SECRET="your-secure-jwt-refresh-secret-here"

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_MONITORING=false
NEXT_PUBLIC_ENABLE_DEBUG=true

# Development Settings
DEBUG_DOCS=false
ENABLE_MOCK_DATA=false

# Optional: Google Maps API (for location features)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="your-google-maps-api-key"

# Optional: Analytics
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID="your-google-analytics-id"

# Optional: Error Tracking
NEXT_PUBLIC_SENTRY_DSN="your-sentry-dsn"