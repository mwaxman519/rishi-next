# Rishi Platform - Production Environment Configuration Template
# Copy this file to .env.production and fill in your actual values

# Environment Markers
NODE_ENV=production
NEXT_PUBLIC_APP_ENV=production
NEXT_PUBLIC_ENVIRONMENT=production

# Database Configuration - PRODUCTION
# Replace with your actual production Neon database URL
DATABASE_URL=postgresql://neondb_owner:password@ep-production-hostname.neon.tech/rishiapp_prod?sslmode=require

# API Configuration
NEXT_PUBLIC_API_URL=https://rishi-platform.vercel.app
NEXT_PUBLIC_BASE_URL=https://rishi-platform.vercel.app

# Authentication Configuration
NEXTAUTH_URL=https://rishi-platform.vercel.app
NEXTAUTH_SECRET=production-auth-secret-key-replace-with-secure-value

# Google Maps Configuration
# GOOGLE_MAPS_API_KEY=your-google-maps-api-key
# NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# External Service Configuration
# SENDGRID_API_KEY=your-sendgrid-api-key
# STRIPE_SECRET_KEY=your-stripe-live-key
# STRIPE_PUBLISHABLE_KEY=your-stripe-live-publishable-key

# Mobile App Configuration
NEXT_PUBLIC_ENABLE_OFFLINE=true
NEXT_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_NATIVE_FEATURES=true

# Production Feature Flags
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_STAGING_BANNER=false
NEXT_PUBLIC_ANALYTICS_ENABLED=true
NEXT_PUBLIC_ERROR_REPORTING_ENABLED=true
NEXT_PUBLIC_PERFORMANCE_MONITORING=true

# Vercel Configuration
VERCEL_ENV=production