{
  "id": "com.rishi.platform.staging",
  "displayName": "Rishi Platform Staging",
  "version": "1.0.0",
  "buildNumber": "1",
  "description": "Rishi Platform mobile app - staging environment",
  "author": "Rishi Platform Team",
  "website": "https://rishi-staging.replit.app",
  "repository": "",
  "keywords": ["capacitor", "mobile", "hybrid"],
  "preferences": {
    "webSecurity": false,
    "allowInlineMediaPlayback": true,
    "mediaPlaybackRequiresUserAction": false,
    "allowsInlineMediaPlayback": true,
    "keyboardDisplayRequiresUserAction": false
  },
  "android": {
    "minSdkVersion": 21,
    "targetSdkVersion": 34,
    "compileSdkVersion": 34,
    "buildToolsVersion": "34.0.0",
    "permissions": [
      "INTERNET",
      "ACCESS_NETWORK_STATE",
      "ACCESS_WIFI_STATE",
      "WRITE_EXTERNAL_STORAGE",
      "READ_EXTERNAL_STORAGE",
      "CAMERA",
      "ACCESS_FINE_LOCATION",
      "ACCESS_COARSE_LOCATION"
    ]
  },
  "ios": {
    "minVersion": "13.0",
    "targetSdkVersion": "17.0"
  },
  "scripts": {
    "build": "NODE_OPTIONS='--max-old-space-size=8192 --optimize-for-size' next build"
  },
  "voltbuilder": {
    "memory": "8GB",
    "buildTimeout": "30m"
  }
}