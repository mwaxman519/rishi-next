# Environment Configuration
NEXT_PUBLIC_APP_ENV=development # development, staging, or production

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/my_local_db # Development/staging database
STAGING_DATABASE_URL=postgresql://username:password@localhost:5432/my_staging_db # Staging-specific database
PRODUCTION_DATABASE_URL=postgresql://username:password@localhost:5432/my_production_db # Production database

# Authentication Settings
SESSION_SECRET=your-session-secret
JWT_SECRET=your-jwt-secret
TOKEN_EXPIRY=86400 # 24 hours in seconds

# API Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:5000 # Base URL for API requests from frontend

# Feature flags
ENABLE_MOCK_DATA=true # Enable mock data in development mode
ENABLE_DEV_TOOLS=true # Enable development tools

# Azure Configuration (Production)
AZURE_STATIC_WEB_APPS_API_TOKEN=your-azure-token # Only needed for Azure deployments

# If you need to use external APIs or services
# EXTERNAL_API_KEY=your-api-key

# Organization Settings
DEFAULT_ORGANIZATION_ID=your-default-org-id # Used for new users without an organization

# Logging
LOG_LEVEL=debug # debug, info, warn, error