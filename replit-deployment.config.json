{
  "name": "rishi-platform-staging",
  "description": "Rishi Platform - Staging Environment with Memory Optimization",
  "environment": "staging",
  "build": {
    "command": "bash scripts/build-staging-memory-optimized.sh",
    "outputDirectory": ".next"
  },
  "start": {
    "command": "npm start",
    "port": 5000
  },
  "healthCheck": {
    "path": "/api/health/lightweight",
    "timeout": 10,
    "interval": 30,
    "retries": 3
  },
  "resources": {
    "memory": "1GB",
    "cpu": "0.5 vCPUs",
    "disk": "10GB"
  },
  "environment_variables": {
    "NODE_ENV": "production",
    "NEXT_PUBLIC_APP_ENV": "staging",
    "NODE_OPTIONS": "--max-old-space-size=2048 --max-semi-space-size=128 --optimize-for-size"
  },
  "networking": {
    "ingress": {
      "external": true
    }
  }
}